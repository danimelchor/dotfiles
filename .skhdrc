# change window focus within space
alt - j : yabai -m window --focus south && sketchybar --trigger refresh_focus
alt - k : yabai -m window --focus north && sketchybar --trigger refresh_focus
alt - h : yabai -m window --focus west && sketchybar --trigger refresh_focus
alt - l : yabai -m window --focus east && sketchybar --trigger refresh_focus

#change focus between external displays (left and right)
alt - s: yabai -m display --focus south
alt - n: yabai -m display --focus north

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen && /usr/local/bin/toggle-wm toggle-focus
shift + alt - f : /usr/local/bin/toggle-wm toggle-focus

# move window and split
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - h : yabai -m window --warp west
shift + alt - l : yabai -m window --warp east

# resize windows
shift + ctrl - h : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
shift + ctrl - j : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:-100
shift + ctrl - k : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:100
shift + ctrl - l : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
shift + ctrl - r : yabai -m space --balance

# move window to display left and right
shift + alt - s : yabai -m window --display south; yabai -m display --focus south;
shift + alt - n : yabai -m window --display north; yabai -m display --focus north;

# space navigation
cmd - left : yabai -m space --focus prev && sketchybar --trigger refresh_focus
cmd - right : yabai -m space --focus next && sketchybar --trigger refresh_focus

cmd - 1 : yabai -m space --focus 1 && sketchybar --trigger refresh_spaces
cmd - 2 : yabai -m space --focus 2 && sketchybar --trigger refresh_spaces
cmd - 3 : yabai -m space --focus 3 && sketchybar --trigger refresh_spaces
cmd - 4 : yabai -m space --focus 4 && sketchybar --trigger refresh_spaces
cmd - 5 : yabai -m space --focus 5 && sketchybar --trigger refresh_spaces
cmd - 6 : yabai -m space --focus 6 && sketchybar --trigger refresh_spaces

# move window to space
alt - 1 : yabai -m window --space 1 && sketchybar --trigger refresh_spaces
alt - 2 : yabai -m window --space 2 && sketchybar --trigger refresh_spaces
alt - 3 : yabai -m window --space 3 && sketchybar --trigger refresh_spaces
alt - 4 : yabai -m window --space 4 && sketchybar --trigger refresh_spaces
alt - 5 : yabai -m window --space 5 && sketchybar --trigger refresh_spaces
alt - 6 : yabai -m window --space 6 && sketchybar --trigger refresh_spaces
alt - 7 : yabai -m window --space 7 && sketchybar --trigger refresh_spaces
alt - 8 : yabai -m window --space 8 && sketchybar --trigger refresh_spaces


