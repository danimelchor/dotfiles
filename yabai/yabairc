sudo yabai --load-sa

sh ~/.config/yabai/create_spaces.sh

# Custom config
yabai -m config layout bsp \
          window_placement second_child \
          top_padding 15 \
          bottom_padding 15 \
          left_padding 15 \
          right_padding 15 \
          window_gap 15 \
          mouse_modifier alt \
          mouse_action1 move \
          mouse_action2 resize \
          window_animation_duration 0 \
          active_window_border_color 0xfffab387 \
          normal_window_border_color 0xff313244 \
          insert_feedback_color 0xfffab387 \
          window_border_width 3 \
          window_border_radius 12 \
          window_border on \
          window_opacity off \
          window_border_blur off \
          active_window_opacity 1 \
          normal_window_opacity 1 \
          window_topmost on \
          external_bar all:38:0 

yabai -m mouse_drop_action swap

# Rules
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^FaceTime$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Raycast$" manage=off

yabai -m rule --add app="^Spotify$" space=6
yabai -m rule --add app="^Slack$" space=6
yabai -m rule --add app="^Discord$" space=6
yabai -m rule --add app="^Microsoft To Do$" space=5
yabai -m rule --add app="Notion^ space=5
yabai -m rule --add app="Notes^ space=5

# Signal hooks
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
yabai -m signal --add event=display_added action="sleep 1 && ~/.config/yabai/create_spaces.sh"
yabai -m signal --add event=display_removed action="sleep 1 && ~/.config/yabai/create_spaces.sh"

# Sketchybar
REFRESH_SKETCHYBAR="sketchybar --trigger windows_on_spaces"
yabai -m signal --add event=window_focused action="$REFRESH_SKETCHYBAR"
yabai -m signal --add event=window_created action="$REFRESH_SKETCHYBAR"
yabai -m signal --add event=window_destroyed action="$REFRESH_SKETCHYBAR"
