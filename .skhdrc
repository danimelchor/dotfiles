# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - s: yabai -m display --focus south
alt - n: yabai -m display --focus north

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# resize windows
shift + ctrl - h : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
shift + ctrl - j : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
shift + ctrl - k : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:100
shift + ctrl - l : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

# move window to display left and right
shift + alt - s : yabai -m window --display south; yabai -m display --focus south;
shift + alt - n : yabai -m window --display north; yabai -m display --focus north;

# space navigation
cmd + ctrl - left : yabai -m space --focus prev
cmd + ctrl - right : yabai -m space --focus next

cmd + ctrl - 1 : yabai -m space --focus 1 
cmd + ctrl - 2 : yabai -m space --focus 2 
cmd + ctrl - 3 : yabai -m space --focus 3 
cmd + ctrl - 4 : yabai -m space --focus 4 
cmd + ctrl - 5 : yabai -m space --focus 5 
cmd + ctrl - 6 : yabai -m space --focus 6 
cmd + ctrl - 7 : yabai -m space --focus 7 
cmd + ctrl - 8 : yabai -m space --focus 8

# ------ NON YABAI RELATED ------ #
hyper - t : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~ tmux new-session;
hyper - f : open -a Firefox
hyper - v : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~ sh -c "tmux new-session 'nvim'" &;
